@model CRE.ViewModels.TabbedEvaluationViewModel

@{
    ViewBag.Title = "Evaluator View";
}

<h2>Evaluator View</h2>

<!-- Tab Navigation -->
<ul class="nav nav-tabs" id="myTab" role="tablist">
    <li class="nav-item" role="presentation">
        <a class="nav-link active" id="assignments-tab" data-bs-toggle="tab" href="#assignments" role="tab" aria-controls="assignments" aria-selected="true">Evaluation Assignments</a>
    </li>
    <li class="nav-item" role="presentation">
        <a class="nav-link" id="toBeEvaluated-tab" data-bs-toggle="tab" href="#toBeEvaluated" role="tab" aria-controls="toBeEvaluated" aria-selected="false">To Be Evaluated</a>
    </li>
    <li class="nav-item" role="presentation">
        <a class="nav-link" id="evaluated-tab" data-bs-toggle="tab" href="#evaluated" role="tab" aria-controls="evaluated" aria-selected="false">Evaluated</a>
    </li>
    <li class="nav-item" role="presentation">
        <a class="nav-link" id="declined-tab" data-bs-toggle="tab" href="#declined" role="tab" aria-controls="declined" aria-selected="false">Declined Evaluations</a>
    </li>
</ul>

<!-- Tab Content -->
<div class="tab-content">
    <div class="tab-pane fade show active" id="assignments" role="tabpanel" aria-labelledby="assignments-tab">
        <h3>Evaluation Assignments</h3>
        @if (Model.EvaluationAssignments.Any())
        {
            <table class="table">
                <thead>
                    <tr>
                        <th>UREC Number</th>
                        <th>Details</th>
                        <th>Application Date</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var assignment in Model.EvaluationAssignments)
                    {
                        <tr>
                            <td>@assignment.EthicsApplication.urecNo</td>
                            <td>@assignment.NonFundedResearchInfo.title</td>
                            <td>@assignment.EthicsApplication.submissionDate.ToString("MM/dd/yyyy")</td>
                            <td>@assignment.EthicsEvaluation.evaluationStatus</td>
                            <td>
                                <a href="@Url.Action("RespondToAssignment", "EthicsEvaluator", new { id = assignment.EthicsApplication.urecNo })" class="btn btn-info">View</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>No evaluation assignments found.</p>
        }
    </div>

    <div class="tab-pane fade" id="toBeEvaluated" role="tabpanel" aria-labelledby="toBeEvaluated-tab">
        <h3>To Be Evaluated</h3>
        @if (Model.ToBeEvaluated.Any())
        {
            <table class="table">
                <thead>
                    <tr>
                        <th>UREC Number</th>
                        <th>Details</th>
                        <th>Start Date</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var evaluation in Model.ToBeEvaluated)
                    {
                        <tr>
                            <td>@evaluation.EthicsApplication.urecNo</td>
                            <td>@evaluation.NonFundedResearchInfo.title</td>
                            <td>@evaluation.EthicsEvaluation.startDate?.ToString("MM/dd/yyyy")</td>
                            <td>@evaluation.EthicsEvaluation.evaluationStatus</td>
                            <td>
                                <a href="@Url.Action("EvaluationDetails", "EthicsEvaluator", new { id = evaluation.EthicsApplication.urecNo })" class="btn btn-warning">Evaluate</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>No evaluations to be completed.</p>
        }
    </div>

    <div class="tab-pane fade" id="evaluated" role="tabpanel" aria-labelledby="evaluated-tab">
        <h3>Evaluated</h3>
        @if (Model.Evaluated.Any())
        {
            <table class="table">
                <thead>
                    <tr>
                        <th>UREC Number</th>
                        <th>Details</th>
                        <th>Evaluation Date</th>
                        <th>Evaluation Results</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var evaluated in Model.Evaluated)
                    {
                        <tr>
                            <td>@evaluated.EthicsApplication.urecNo</td>
                            <td>@evaluated.NonFundedResearchInfo.title</td>
                            <td>@evaluated.EthicsEvaluation.endDate?.ToString("MM/dd/yyyy")</td>
                            <td>@evaluated.EthicsEvaluation.evaluationStatus</td>
                            <td>
                                <a href="@Url.Action("Evaluated", "EthicsEvaluator", new { urecNo = evaluated.EthicsApplication.urecNo, evaluationId = evaluated.EthicsEvaluation.evaluationId})" class="btn btn-info">View Results</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>No evaluations have been completed.</p>
        }
    </div>

   
    <div class="tab-pane fade" id="declined" role="tabpanel" aria-labelledby="declined-tab">
        <h3>Declined Evaluations</h3>
        @if (Model.DeclinedEvaluations.Any())
        {
            <table class="table">
                <thead>
                    <tr>
                        <th>UREC Number</th>
                        <th>Details</th>
                        <th>Decline Date</th>
                        <th>Decline Reason</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var evaluation in Model.DeclinedEvaluations)
                    {
                        <tr>
                            <td>@evaluation.EthicsApplication.urecNo</td>
                            <td>@evaluation.NonFundedResearchInfo.title</td>
                            <td>@evaluation.EthicsEvaluation.endDate?.ToString("MM/dd/yyyy")</td>
                            <td>@evaluation.EthicsEvaluation.reasonForDecline</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>No evaluations have been declined.</p>
        }
    </div>

</div>
<!-- Success Modal -->
<div class="modal fade" id="evaluationSuccessModal" tabindex="-1" role="dialog" aria-labelledby="evaluationSuccessModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="evaluationSuccessModalLabel">Evaluation Submitted</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Your evaluation was submitted successfully.
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script>
        // Activate the tab based on URL hash
        $(document).ready(function () {
            var hash = window.location.hash;
            if (hash) {
                $('.nav-tabs a[href="' + hash + '"]').tab('show');
            }

            // Optional: Handle tab clicks for additional actions
            $('.nav-tabs a').on('click', function () {
                var target = $(this).attr('href');
                // You can add additional actions here if needed
            });
        });
    </script>
}
